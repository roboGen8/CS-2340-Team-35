<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.LocationDetailActivity">

    <TextView
        android:id="@+id/location_detail_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Location"
        style="@style/TitleTextView"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:layout_below="@id/location_detail_lbl"
        android:id="@+id/location_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        style="@style/LocDet"
        android:layout_alignLeft="@id/location_detail_lbl"
        android:text="LOCATION" />


    <TextView
        android:layout_below="@id/location_detail"
        android:id="@+id/coordinate_detail_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp"
        android:text="Coordinate"
        style="@style/TitleTextView1"
        android:layout_alignLeft="@id/location_detail_lbl"
        />

    <TextView
        android:layout_below="@id/coordinate_detail_lbl"
        android:id="@+id/coordinate_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        style="@style/LocDet"
        android:layout_alignLeft="@id/location_detail_lbl"
        android:text="COORDINATE" />

    <TextView
        android:layout_below="@id/coordinate_detail"
        android:id="@+id/address_detail_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/location_detail_lbl"
        android:text="Address"
        style="@style/TitleTextView1"
        />

    <TextView
        android:layout_below="@id/address_detail_lbl"
        android:id="@+id/address_detail"
        style="@style/LocDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignLeft="@id/location_detail_lbl"
        android:text="ADDRESS" />

    <TextView
        android:layout_below="@id/address_detail"
        android:id="@+id/type_detail_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp"
        android:text="Type"
        android:layout_alignLeft="@id/location_detail_lbl"
        style="@style/TitleTextView1"
        />

    <TextView
        android:layout_below="@id/type_detail_lbl"
        android:id="@+id/type_detail"
        style="@style/LocDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignLeft="@id/location_detail_lbl"
        android:text="TYPE" />

    <TextView
        android:layout_below="@id/type_detail"
        android:id="@+id/phone_detail_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp"
        android:text="Phone"
        android:layout_alignLeft="@id/location_detail_lbl"
        style="@style/TitleTextView1"/>

    <TextView
        android:layout_below="@id/phone_detail_lbl"
        android:id="@+id/phone_detail"
        style="@style/LocDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignLeft="@id/location_detail_lbl"
        android:text="PHONE" />

    <TextView
        android:layout_below="@id/phone_detail"
        android:id="@+id/web_detail_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp"
        android:text="Web"
        android:layout_alignLeft="@id/location_detail_lbl"
        style="@style/TitleTextView1"/>

    <TextView
        android:layout_below="@id/web_detail_lbl"
        android:id="@+id/web_detail"
        style="@style/LocDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignLeft="@id/location_detail_lbl"
        android:text="WEB" />

    <Button
        android:id="@+id/view_donations_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/web_detail"
        android:layout_alignParentStart="true"
        android:onClick="onViewDonationsPressed"
        android:layout_alignLeft="@id/location_detail_lbl"
        android:text="View Donations"
        />

</RelativeLayout>