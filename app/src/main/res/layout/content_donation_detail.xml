<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.LocationDetailActivity">

    <TextView
        android:id="@+id/item_detail_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Item" />

    <TextView
        android:layout_below="@id/item_detail_lbl"
        android:id="@+id/item_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:text="ITEM" />


    <TextView
        android:layout_below="@id/item_detail"
        android:id="@+id/category_detail_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp"
        android:text="Category" />

    <TextView
        android:layout_below="@id/category_detail_lbl"
        android:id="@+id/category_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:text="CATEGORY" />

    <TextView
        android:layout_below="@id/category_detail"
        android:id="@+id/location_detail_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp"
        android:text="Location" />

    <TextView
        android:layout_below="@id/location_detail_lbl"
        android:id="@+id/location_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:text="LOCATION" />

    <TextView
        android:layout_below="@id/location_detail"
        android:id="@+id/price_detail_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp"
        android:text="Price" />

    <TextView
        android:layout_below="@id/price_detail_lbl"
        android:id="@+id/price_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:text="PRICE" />

    <TextView
        android:layout_below="@id/price_detail"
        android:id="@+id/description_detail_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp"
        android:text="Description" />

    <TextView
        android:layout_below="@id/description_detail_lbl"
        android:id="@+id/description_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:text="DESCRIPTION" />

</RelativeLayout>